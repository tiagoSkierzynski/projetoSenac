<div class="fundoPagina">
    <!-- artigo -->
    <div class="container-fluid" id="article">                      
      <div class="row">
        <img src="public/Imagens/capa2.png" class="img-fluid" alt="Imagem responsiva" id="imagemArtigo">
      </div>
    </div>

    <!-- seção 1 linha-->
  <div class="container" id="cor">
    <div class="row">
      <div class="col-12" id="cor">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100" src="public/Imagens/1.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="public/Imagens/2.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="public/Imagens/3.jpg" alt="Third slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

