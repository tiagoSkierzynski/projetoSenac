<title>Update Doação</title>

<br><br>
  <br>
<h2>Uptade Doação</h2>

	<form action="/updateDoacao" method="POST">
	<div class="container" >
		{{#each doacao}}
		<div class="form-row">
			<div class="form-group col-md-1">
				<input type="text"  class="form-control" readonly="true" name="id" value={{id}}	>
			</div>
		</div>
    	<div class="form-group">
    <label for="exampleFormControlSelect1">Categoria de Doação</label>
    <select class="form-control" name="categoria" id="exampleFormControlSelect1">
      <option value={{categoria}} selected>{{categoria}} </option>
      <option>Alimento</option>
      <option>Brinquedo</option>
      <option>Dinheiro</option>
      <option>Vestuário</option>
    </select>
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Descrição da Doação</label>
    <textarea class="form-control" rows="3" name="descricao">{{descricao}}</textarea>
  </div>
  <div class="form-group">
    <h6>Prioridade</h6>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" value="Baixo"  name="nivel" id="inlineRadio1">
      <label class="form-check-label" for="inlineRadio1">Baixo</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" value="Médio" name="nivel" id="inlineRadio2">
      <label class="form-check-label" for="inlineRadio2">Médio</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" value="Alto" name="nivel" id="inlineRadio2">
      <label class="form-check-label" for="inlineRadio2">Alto</label>
    </div>
  </div>
      	<div class="form-row">
			<div class="form-group ">
				<button type="submit" class="btn btn-primary botao">Salvar</button>
			</div>
		</div>
	
	 </div>		
	</form>
    	{{/each}}
		<br><br><br><br><br>
 
	
